<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Invoice - Chapterless</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      margin: 40px;
      color: #333;
    }
    .invoice-box {
      border: 1px solid #ddd;
      padding: 30px;
      border-radius: 10px;
    }
    .logo-section {
      display: flex;
      align-items: center;
    }
    .logo-img {
      height: 55px;
      margin-right: 10px;
    }
    .brand-name {
      font-weight: 700;
      font-size: 24px;
      color: #212529;
    }
    .slogan {
      text-transform: uppercase;
      font-size: 14px;
      color: #6c757d;
      margin-left: 65px;
      margin-top: -5px;
    }
    .table th, .table td {
      vertical-align: middle;
    }
    .total {
      font-weight: 600;
      font-size: 18px;
    }
    footer {
      text-align: center;
      margin-top: 40px;
      font-size: 13px;
      color: #666;
    }
  </style>
</head>
<body>
  <div class="invoice-box">
    <!-- Logo, Brand & Slogan -->
    <div class="mb-3">
      <div class="logo-section">
        <img src="/assets/harryPotter.jpeg" alt="Chapterless Logo" class="logo-img">
        <div class="brand-name">Chapterless</div>
      </div>
      <div class="slogan">Where Stories Find Lost Souls</div>
    </div>

    <!-- Invoice Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div></div>
      <div class="text-end">
        <strong>Invoice #: </strong> <%= order.orderNumber %><br>
        <strong>Date:</strong> <%= order.formattedDate %>
      </div>
    </div>

    <!-- Billing Details -->
    <div class="mb-4">
      <h5>Billing To:</h5>
      <p>
        <strong><%= order.shippingAddress.fullName || 'N/A' %></strong><br>
        <%= order.shippingAddress.street || '' %><br>
        <% if (order.shippingAddress.landmark) { %>
          <%= order.shippingAddress.landmark %><br>
        <% } %>
        <%= order.shippingAddress.city || '' %>, <%= order.shippingAddress.state || '' %> <%= order.shippingAddress.pinCode || '' %><br>
        <%= order.shippingAddress.country || '' %><br>
        <%= user.email || '' %>
      </p>
    </div>

    <!-- Order Items Table -->
    <table class="table table-bordered">
      <thead class="table-light">
        <tr>
          <th>Book</th>
          <th>Price</th>
          <th>Qty</th>
          <th>Subtotal</th>
        </tr>
      </thead>
      <tbody>
        <% order.items.forEach(item => { %>
          <tr>
            <td><%= item.title || 'Unknown Product' %></td>
            <td><%= item.formattedPrice %></td>
            <td><%= item.quantity || 1 %></td>
            <td>â‚¹<%= (item.price * item.quantity).toFixed(2) %></td>
          </tr>
        <% }) %>
        <tr>
          <td colspan="3" class="text-end">Subtotal</td>
          <td><%= order.formattedSubtotal %></td>
        </tr>
        <tr>
          <td colspan="3" class="text-end">Tax</td>
          <td><%= order.formattedTax %></td>
        Deductible: true
        </tr>
        <tr>
          <td colspan="3" class="text-end total">Total</td>
          <td class="total"><%= order.formattedTotal %></td>
        </tr>
        <tr>
          <td colspan="3" class="text-end">Payment Method</td>
          <td><%= order.paymentMethod || 'Cash on Delivery' %></td>
        </tr>
      </tbody>
    </table>

    <!-- Footer -->
    <footer>
      This is a computer-generated invoice and does not require a signature.<br>
      Thank you for shopping at <strong>Chapterless</strong> ðŸ“š
    </footer>
  </div>
</body>
</html>